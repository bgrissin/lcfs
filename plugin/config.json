{
  "description": "LCFS Graphdriver Plugin",
  "documentation": "LCFS",
  "entrypoint": ["./lcfs_plugin"],
  "interface": {
    "types": ["docker.graphdriver/1.0"],
    "socket": "lcfs.sock"
  },
  "mounts": [
  {
      "destination": "/lcfs",
      "source": "/lcfs",
      "type": "bind",
      "options": ["rbind", "rw"]
  }
  ],
  "PropagatedMount": "/lcfs",
  "network": {
    "type": "host"
  },
  "env": [
    {
      "name": "DEBUG",
      "description": "If set, prints debug messages",
      "value": "1"
    }
  ]
}
