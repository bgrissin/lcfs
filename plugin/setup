set -x

rm lcfs_plugin 2>/dev/null
go build -o lcfs_plugin lcfs_plugin.go

docker plugin disable lcfs 2>/dev/null
docker plugin rm lcfs 2>/dev/null
sudo rm -fr rootfs 2>/dev/null 2>/dev/null

docker build -t rootfsimage .
id=$(docker create rootfsimage)
mkdir rootfs
docker export "$id" | tar -x -C rootfs/
sudo docker plugin create lcfs .
docker plugin enable lcfs

sudo rm -fr rootfs/
docker rm -vf "$id"
docker rmi rootfsimage

docker plugin ls
